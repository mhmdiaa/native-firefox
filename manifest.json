{
  "manifest_version": 2,

  "name": "Native",
  "description": "Add articles to Native",
  "version": "1.0",

  "background": {
    "scripts": ["index.js"]
  },

  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "Add to Native"
  },
  "permissions": [
    "tabs"
  ],

  "applications": {
  "gecko": {
    "id": "native@getnative.me",
    "strict_min_version": "42.0",
    "strict_max_version": "50.*",
    "update_url": "https://getnative.me/updates.json"
  }
}
}